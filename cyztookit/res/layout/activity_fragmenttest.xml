<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	>
<Button
	android:id="@+id/fragtestbtnadd"
        android:text="@string/activityFragTestBtnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	/>
<Button
	android:id="@+id/fragtestbtnreplace"
        android:text="@string/activityFragTestBtnReplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
	/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:baselineAligned="false"
	>

<androidx.fragment.app.FragmentContainerView
	android:name="com.example.android.helloactivity.ExampleFragment"
	android:layout_weight="1"
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:id="@+id/fragleft"
	/>
<androidx.fragment.app.FragmentContainerView
	android:layout_weight="1"
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:id="@+id/fragcenter"
	/>
<androidx.fragment.app.FragmentContainerView
	android:name="com.example.android.helloactivity.ExampleFragment2"
	android:layout_weight="1"
	android:layout_width="0dp"
	android:layout_height="match_parent"
	android:id="@+id/fragright"
	/>

</LinearLayout>
</LinearLayout>
